<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/fondo_principal"
    >


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/fondo_principal">


        <ImageView
            android:id="@+id/ivPelicula"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:src="@drawable/esdla"
            android:scaleType="fitXY"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>


        <TextView
            android:id="@+id/tvPeliculaNombre"
            android:layout_width="280sp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="3sp"
            android:textSize="17sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/ivPelicula"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="@color/white"
            android:minLines="2"
            tools:text="El Se単or de los Anillos: La Comunidad del Anillo" />

        <TextView
            android:id="@+id/tvPeliculaA単o"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="A単o"
            android:textColor="@color/white"
            android:layout_marginHorizontal="3sp"
            android:layout_marginVertical="8sp"
            app:layout_constraintTop_toBottomOf="@+id/tvPeliculaNombre"
            app:layout_constraintStart_toEndOf="@+id/ivPelicula"/>


        <TextView
            android:id="@+id/tvPeliculaDirector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Director"
            android:textColor="@color/white"
            android:layout_marginHorizontal="3sp"
            app:layout_constraintTop_toBottomOf="@+id/tvPeliculaA単o"
            app:layout_constraintStart_toEndOf="@+id/ivPelicula"/>

        <TextView
            android:id="@+id/tvPeliculaGenero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Genero"
            android:textColor="@color/white"
            android:layout_marginHorizontal="3sp"
            app:layout_constraintTop_toBottomOf="@+id/tvPeliculaDirector"
            app:layout_constraintStart_toEndOf="@+id/ivPelicula"/>

        <TextView
            android:id="@+id/tvPeliculaSinopsis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_marginHorizontal="3sp"
            app:layout_constraintTop_toBottomOf="@+id/tvPeliculaGenero"
            app:layout_constraintStart_toEndOf="@+id/ivPelicula"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>